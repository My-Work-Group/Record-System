<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.project.record.offsite.vehicle.mapper.VehicleMapper">

    <resultMap type="Vehicle" id="VehicleResult">
        <result property="vehId" column="veh_id"/>
        <result property="plateNumber" column="plate_number"/>
        <result property="plateColor" column="plate_color"/>
        <result property="vehType" column="veh_type"/>
        <result property="vehAxes" column="veh_axes"/>
        <result property="personId" column="person_id"/>
        <result property="companyId" column="company_id"/>
<!--        <association property="vehicle" column="veh_id" javaType="Vehicle" resultMap="vehicleResult"/>-->
    </resultMap>

    <insert id="insertVehicle" parameterType="Vehicle" useGeneratedKeys="true" keyProperty="vehId">
        insert into rec_offsite_veh(
        <if test="vehId != null">veh_id,</if>
        <if test="plateNumber != null ">plate_number,</if>
        <if test="plateColor != null and plateColor != ''">plate_color,</if>
        <if test="vehType != null and vehType != ''">veh_type,</if>
        <if test="vehAxleNum != null">veh_axes</if>
        <if test="personId != null and personId != ''">person_id,</if>
        <if test="companyId != null and companyId != ''">company_id,</if>
        )values(
        <if test="vehId != null and vehId != ''">#{veh_id},</if>
        <if test="plateNumber != null and plateNumber != ''">#{plate_number},</if>
        <if test="plateColor != null and plateColor != ''">#{plate_color},</if>
        <if test="vehType != null and vehType != ''">#{veh_type},</if>
        <if test="vehAxleNum != null and vehAxleNum != ''">#{veh_axes},</if>
        <if test="personId != null and personId != ''">#{person_id},</if>
        <if test="companyId != null and companyId != ''">#{company_id}</if>
        )
    </insert>

</mapper> 